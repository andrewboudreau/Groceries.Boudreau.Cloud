{
  "version": "0.1.0",
  "command": "dotnet",
  "options": {
    // Make sure this points to the directory containing project.json
    "cwd": "${workspaceRoot}/src/Groceries.Boudreau.Cloud.WebApp"
  },
  "isShellCommand": true,
  "showOutput": "always",
  "tasks": [
    {
      "taskName": "build",
      "problemMatcher": "$msCompile",
      "isBuildCommand": true
    },
    {
      "taskName": "bundle"
    },
    {
      "taskName": "clean",
      "args": [ "bundle", "clean" ],
      "suppressTaskName": true
    },
    {
      "taskName": "watch",
      "args": [ "bundle", "watch" ],
      "suppressTaskName": true,
      "isWatching": true
    }
  ]
}